@page
@model NetCore.Pages.BookList.IndexModel
@{
}
<br>
<div class="container">
    <div class="row">
    <div class="col-6">
        <h2 class="text-info">Book List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-page="Create" class="btn btn-primary">Create New Book</a>
    </div>
    </div>
</div>
@if(Model.Books.Count()>0)
{
    <form method="Post">
 <table class="table table-stripped border">
     <th>
         @Html.DisplayNameFor(m => m.Books.FirstOrDefault().Name)
     </th>
     <th>
         @Html.DisplayNameFor(m => m.Books.FirstOrDefault().Author)
     </th>
     <th>
         @Html.DisplayNameFor(m => m.Books.FirstOrDefault().ISBN)
     </th>
     <th></th>
     @foreach (var item in Model.Books)
     {   <tr>
         <td>
             @Html.DisplayFor(m => item.Name)
         </td>
        <td>
             @Html.DisplayFor(m => item.Author)
         </td>

         <td>
             @Html.DisplayFor(m => item.ISBN)
         </td>
         <td>
             <button asp-route-id="@item.Id" asp-page-handler="Delete"  class="btn btn-danger btn-sm">Delete</button>
             <a asp-route-id="@item.Id" asp-page="Edit" class="btn btn-success btn-sm">Edit</a>
        </td>
         </tr>
     }
 </table>
 </form>
}
else
{
 <p>No books available</p>
}